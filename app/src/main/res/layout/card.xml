<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/flagView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/rankView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/flagView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="21dp"
                android:text="Rank"
                android:textAlignment="viewStart" />

            <TextView
                android:id="@+id/nameView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/rankView"
                android:layout_alignStart="@+id/rankView"
                android:layout_below="@+id/rankView"
                android:layout_marginTop="14dp"
                android:text="Country"
                android:textAlignment="viewStart" />

            <TextView
                android:id="@+id/popView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/nameView"
                android:layout_alignStart="@+id/nameView"
                android:layout_below="@+id/nameView"
                android:layout_marginTop="15dp"
                android:text="Population" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>